<div>
    <label>Title
        <input type="text" name="title" value="<%= locals.book.title %>">
    </label>
</div>
<div>
    <label>Author
        <select name="author">
            <% authors.forEach((author) => { %>
                <% if(author.id === book.author) { %>
                  <option selected value="<%= author.id %>" label="<%= author.name %>">
                <% } else { %>
                  <option value="<%= author.id %>" label="<%= author.name %>">
                <% } %>
            <% }) %>
        </select>
    </label>
</div>
<div>
    <label>Publish Date
        <input type="date" name="publishDate" value="<%= locals.book.publishDate==null ? '' : book.publishDate.toISOString().split('T')[0] %>">
    </label>
</div>
<div>
    <label>Page Count
        <input type="Number" name="pageCount" min="1" value="<%= locals.book.pageCount %>">
    </label>
</div>
<div>
    <label>Cover
        <input type="file" name="cover" class="filepond">
    </label>
</div>
<div>
    <label>Description
        <textarea name="description"><%= book.description %></textarea>
    </label>
</div>